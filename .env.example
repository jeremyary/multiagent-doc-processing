# Required
OPENAI_API_KEY=your-api-key-here

# Optional - Custom OpenAI-compatible endpoint
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Optional - LangFuse observability
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Optional - External API integrations (tools available when keys present)
BATCHDATA_API_KEY=...          # Property/address lookup (batchdata.com)
BRAVE_SEARCH_API_KEY=...       # Web search (brave.com/search/api)
FRED_API_KEY=...               # Economic data (fred.stlouisfed.org)

# Optional - LLM parameters
LLM_TEMPERATURE=0.1
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# Optional - Text processing limits
EXTRACTION_MAX_CHARS=8000
CLASSIFICATION_SAMPLE_CHARS=2000

# Optional - OCR settings
OCR_ENABLED=true
OCR_MIN_CHARS_PER_PAGE=50
OCR_MIN_FREE_VRAM_GB=3.0

# Optional - Directory paths
INPUT_PDF_DIR=./input_pdfs
OUTPUT_REPORT_DIR=./output_reports

# Optional - Database store paths
CHECKPOINT_DB_PATH=.workflow_checkpoints.db
DOCUMENT_CACHE_DB_PATH=.document_cache.db

# Optional - RAG settings
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Optional - Guardrails (all enabled by default)
GUARDRAILS_ENABLED=true
GUARDRAILS_INTENT_CHECK=true   # LLM-based jailbreak detection
GUARDRAILS_DETECT_PII=true     # Detect PII in input
GUARDRAILS_MASK_PII=true       # Mask detected PII